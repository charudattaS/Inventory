<body>
    <div class="container-fluid">
        <div class="text-center">
            <h5>ShopBridge</h5>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Login</h5>
                            @using (Html.BeginForm())
                            {
                                
                                    <div class="form-label-group">
                                        <label>Username</label>
                                        @Html.TextBoxFor(x => x.UserName, "", new { @class = "form-control", @placeholder = "Username", @required = "@required" })
                                    </div>

                                    <div class="form-label-group">
                                        <label for="inputPassword">Password</label>
                                        @Html.TextBoxFor(x => x.Password, "", new { @class = "form-control", @placeholder = "Password", @required = "@required",@type="Password" })
                                    </div>


                                    <button class="btn btn-lg btn-primary btn-block text-uppercase" formaction="@Url.Action("ApplicationUserLogin", "Login")" formmethod="post" type="submit">Login</button>
                                    <hr class="my-4">

                                
                            }
                            </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>